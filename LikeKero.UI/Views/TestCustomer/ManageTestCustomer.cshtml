<div id="divDataTable_length"></div>
<div class="chkTBL">
    <div class="bulkImpLogHT mngEventpage mobileTablenowrap">
        <table id="mydatatable" class="table">
            <thead>
                <tr>
                    <th>Cust ID</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Mobile NO.</th>
                    <th>Gender</th>
