<div id="divdataTables_info"></div>



<script type="text/javascript">
    $(document).ready(function () {
        $("#mydatatable").tableHeadFixer({ "head": true, "top": 1 });
        var langUrl = $("#LangUrl").val();
        var mytable = $('#mydatatable').dataTable({
            "ajax": {
                  "url": "@Url.Content("~/TestCustomer/FillTableTestCustomerLstAsync")?Active=1",

                "type": "POST",
                "error": function (x, y, z) {
                }
            },
            "language":
            {
                "url": langUrl
            },
            "aaSorting": [[0, 'asc']],
            "pageLength": 50,
            "serverSide": true,
            "bStateSave": false,
           // "pagingType": "listbox",  //pagination type using pulgin
            "processing": true,
            "pagingType": "full_numbers",  //pagination type using pulgin
            "dom": '<"top"i>rt<"bottom"flp><"clear">',
            "filter": false,
            "oLanguage": {
            "oPaginate": {
            "sFirst": "<i class='fa fa-angle-double-left'></i>",
            "sPrevious": "«",
            "sNext": "»",
            "sLast": "<i class='fa fa-angle-double-right'></i>"
             }
            },
            //"sDom": 'lrtip',
           "bDeferRender": true,//hide the default search filter textbox by removing "f"
            "aoColumns":
                [
                    { "data": "CustID", "sName": "CustID" },
                    { "data": "FirstName", "sName": "FirstName" },
                    { "data": "LastName", "sName": "LastName" },
                    { "data": "MobNo", "sName": "MobNo" },
                    { "data": "Gender", "sName": "Gender" },

                    {
                        "data": "CustID", "sName": "", "class": "", "orderable": false, "mRender": function (data, type, full) {
                            if (data != null) {
                                return "<div class='tablehoverbuttons'> <i class='fa fa-ellipsis-h'></i> <div class='buttonshover'><div class='editbtn'><a class='' href='javascript:void(0);' onClick=EditEvent('" + data + "')><span><img title='Edit' src='@Url.Content("~/images"+imgPath+"/edit.png")' /></span></a></div> </div> </div>";
                            }
                            else
                                return "";
                        }
                    },
                    {
                        "data": "CustID", "sName": "", "class": "", "orderable": false, "mRender": function (data, type, full) {
                            if (data != null) {
                                return "<div class='tablehoverbuttons'> <i class='fa fa-ellipsis-h'></i> <div class='buttonshover'><div class='editbtn'><a class='' href='javascript:void(0);' onClick=DeleteEvent('" + data + "')><span><img title='Delete' src='@Url.Content("~/images"+imgPath+ "/delete grey.png")' /></span></a></div> </div> </div>";
                            }
                            else
                                return "";
                        }
                    }

                ]
        });
         mytable.on('order.dt', function () { $('.dataTables_paginate,.dataTables_info').show(); });
        mytable.on('length.dt', function (e, settings, len) { $('.dataTables_paginate,.dataTables_info').show(); });

        $("#divDataTable_length").append($(".dataTables_info"));
        $("#divdataTables_info").append($(".dataTables_length"));
        $("#divdataTables_info").append($(".dataTables_paginate"));

        function fnGetDataForActivities() {
            var searchObj = new Object();
            searchObj.FirstName = $('#MFname').val();
            searchObj.LastName = $('#MLname').val();
            return searchObj;
        }

        function fnFilterActivities() {
            searchObj = fnGetDataForActivities();
            $("#mydatatable").dataTable().fnMultiFilter({
                "FirstName": searchObj.FirstName,
                "LastName": searchObj.LastName,
            });
        }

        function clearfilter() {
            $('#MFname').val('');
            $('#MLname').val('');

            fnFilterActivities();
        }

        $('#btnClear').click(function () {
            clearfilter();
        });


        $('#btnSearch1').click(function () {
            fnFilterActivities();
        });


        $("#MEventTitle").keyup(function (e) {
            if (e.which == 13) {
                fnFilterActivities();
            }
        });

    });

</script>

<script type="text/javascript">

    function AddEvent() {
        $("#sidebarFilterAddUser").html('');
        $('#sidebarFilterAddUser').addClass('active');
        $('#sidebarFilterAddUser').show();
        $('.overlay').show();

        var url = '@Url.Action("AddEditTestCustomer", "TestCustomer")'
        $("#sidebarFilterAddUser").load(url, function () {
        });
    }
    function EditEvent(CustID) {
        $("#sidebarFilterAddUser").html('');
        $('#sidebarFilterAddUser').show();
        $('#sidebarFilterAddUser').addClass('active');
        $('.overlay').show();
        $('.collapse.in').toggleClass('in');
        $('a[aria-expanded=true]').attr('aria-expanded', 'false');
        var url = '@Url.Action("AddEditTestCustomer", "TestCustomer")?CustID=' + CustID + '';
        $("#sidebarFilterAddUser").load(url);
    }


    //remove item from cart
    function DeleteEvent(CustID) {

           // e.preventDefault();


            $.confirm({
                title: 'Confirm',
                content: "Are you sure want to delete this Customer?",
                buttons: {
                    confirm: function () {

                        $.ajax({
                            url: "@Url.Content("~/TestCustomer/DeleteTestCustomer")",
                            type: "POST",
                            dataType: "json",
                            data: { CustID: CustID },
                            success: function (result) {

                                if (result.isSuccess == true) {
                                    showSuccessMsg('Customer deleted successfully.');
                                    location.reload();
                                }
                                else {
                                    showWarningMsg('something went wrong');
                                }
                            }
                        });

                    },
                    cancel: function () {

                    }
                }
            });
    }


</script>


