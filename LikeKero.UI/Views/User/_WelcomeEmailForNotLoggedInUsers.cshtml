
@{
    ViewData["Title"] = "Send Welcome Email";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="conHeader">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="pull-left">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active" aria-current="page">Welcome Emails</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="conInner">
    <div class="formGroupTop pos">
        <button type="button" class="btn btn-primary" id="btnSendEmail">Send Welcome Email</button>
    </div>
    
</div>
<script>
    $("#btnSendEmail").on('click', function (e) {
        $.ajax({
            url: "@Url.Content("~/User/SendWelcomeEmailForNotLoggedInUsers")",
            type: "GET",
            dataType: "json",
            success: function (data) {
                showSuccessMsg('Welcome Emails will be sent in background');
            }
        });
    });
</script>